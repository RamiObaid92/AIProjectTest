{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "ConnectionStrings": {
    "DefaultConnection": "Data Source=library.db"
  },
  "AllowedHosts": "*",

  "TypeDescriptors": {
    "book": {
      "typeKey": "book",
      "displayName": "Book",
      "schemaVersion": 1,
      "fields": [
        { "name": "title", "dataType": "String", "isRequired": true, "maxLength": 300 },
        { "name": "author", "dataType": "String", "isRequired": true },
        { "name": "publishedYear", "dataType": "Int", "isRequired": false },
        { "name": "isbn", "dataType": "String", "isRequired": false }
      ],
      "indexing": {
        "filterableFields": [ "author", "publishedYear" ],
        "sortableFields": [ "publishedYear", "title" ],
        "fullTextFields": [ "title", "author" ]
      },
      "policy": {
        "allowedCreateRoles": [ "admin", "librarian" ],
        "allowedReadRoles": [ "admin", "librarian", "user" ],
        "allowedUpdateRoles": [ "admin", "librarian" ],
        "allowedDeleteRoles": [ "admin" ]
      },
      "uiHints": {
        "titleField": "title",
        "listFields": [ "title", "author", "publishedYear" ]
      }
    },
    "article": {
      "typeKey": "article",
      "displayName": "Article",
      "schemaVersion": 1,
      "fields": [
        { "name": "title", "dataType": "String", "isRequired": true },
        { "name": "url", "dataType": "String", "isRequired": true, "maxLength": 500 },
        { "name": "publishedAt", "dataType": "DateTime", "isRequired": false }
      ],
      "indexing": {
        "filterableFields": [ "publishedAt" ],
        "sortableFields": [ "publishedAt" ],
        "fullTextFields": [ "title" ]
      }
    }
  }
}
